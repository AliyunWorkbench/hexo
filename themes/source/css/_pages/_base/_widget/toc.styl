#toc
  visibility hidden

.toc-header
  margin-bottom .5rem
  font-weight bold
  line-height 1.2

  &, & > i
    font-size 1.25rem

.toc-body
  max-height 75vh
  overflow-y auto
  overflow -moz-scrollbars-none
  -ms-overflow-style none

  ol
    list-style none
    padding-inline-start 1rem

  &::-webkit-scrollbar
    display none

.tocbot-list
  position relative

  ol
    list-style none
    padding-left 1rem

  a
    font-size 0.95rem

.tocbot-link
  color var(--text-color)

.tocbot-active-link
  font-weight bold
  color var(--link-hover-color)

.tocbot-is-collapsed
  max-height 0

.tocbot-is-collapsible
  overflow hidden
  transition all .3s ease-in-out

.toc-list-item
  white-space nowrap
  overflow hidden
  text-overflow ellipsis

  &.is-active-li::before
    height 1rem
    margin 0.25rem 0
    visibility visible

  &::before
    width 0.15rem
    height 0.2rem
    position absolute
    left 0.25rem
    content ""
    border-radius 2px
    margin 0.65rem 0
    background var(--link-hover-color)
    visibility hidden
    transition height .1s ease-in-out, margin .1s ease-in-out, visibility .1s ease-in-out

.sidebar
  position -webkit-sticky
  position sticky
  top 2rem
  padding 3rem 0
